<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content">
	<name>Content - DjfContent</name>
	<author>David Frassi</author>
	<creationDate>Aprile 2010</creationDate>
	<copyright>Copyright (C) 2010 - All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<authorEmail>info@davidfrassi.it</authorEmail>
	<authorUrl>http://www.davidfrassi.it</authorUrl>
	<version>1.3</version>
	<description>DjfContent</description>
	<files>
		<filename plugin="djfcontent">djfcontent.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
		<field name="redirect_article" type="radio" default="0" description="When an article is saved redirects on the same one and not to the home" label="Redirect on article form">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
		<field name="save_frontpage" type="radio" default="1" description="Allows to save article in the frontpage" label="Save article in the frontpage">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</field>
	
	</fieldset>
		</fields>
	</config>
</extension>
